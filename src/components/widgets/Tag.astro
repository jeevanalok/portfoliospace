---
export interface Props {
  tag: string
  size?: 'sm' | 'lg'
}

const { tag, size = 'sm' } = Astro.props
---

<li
  class={`inline-block ${
    size === 'sm' ? 'my-1 underline-offset-4' : 'my-3 mx-1 underline-offset-8'
  }`}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`${size === 'sm' ? 'text-sm' : 'text-lg'} pr-2 group`}
  >

    <span class="text-gray-700 dark:text-gray-200"># {tag}</span>
  </a>
</li>

<style>
  a {
    @apply relative hover:-top-0.5 hover:text-skin-accent focus-visible:p-1;
  }
  a svg {
    @apply h-6 w-6 scale-95 text-skin-base opacity-80 group-hover:fill-skin-accent inline;
  }
</style>
